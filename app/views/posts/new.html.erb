<div class="main posts-new">
  <div class="container">
    <h1 class="form-heading">投稿する</h1>

    <%= form_tag("/posts/create", {multipart: true}) do %>
      <div class="form">
        <div class="form-body">
          <% @post.errors.full_messages.each do |message| %>
            <div class="form-error">
              <%= message %>
            </div>
          <% end %>
          <div id="app">
            <textarea name="content" v-model.trim="textCount" maxlength="140" placeholder="140 characters max"><%= @post.content %></textarea>
            <p>{{ textCount.length }}/20</p>
          </div>
          </br>
          <p>画像</p>
          <input name="image" type="file">
          <input type="submit" value="投稿">
        </div>
      </div>
    <% end %>
  </div>
  <%= javascript_include_tag 'vue.js' %>
</div>
