<div class="main top-main">
  <div class="top-message">
    <div id='app'>
      <transition appear>
        <div v-html="message"></div>
      </transition>
    </div>
    <div class="swiper-container">
      <div class="swiper-wrapper">
        <div class="swiper-slide">
          <div id="top_slides">
          <carousel-3d
            :controls-visible="true"
            :clickable="false"
            :autoplay="false"
            :autoplay-timeout="5000"
            :display="3" @after-slide-change="onAfterSlideChange">
            <slide v-for="(data, i) in slideData" :index="i">
              <div class="slide__text">{{ data.text }}</div>
              <img class="top-img" :src="data.image" />
            </slide>
          </carousel-3d>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script>
    run_app_vue()
    top_slides()
  </script>
</div>

